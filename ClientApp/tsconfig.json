{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": ".",
    "rootDirs": [
      "."
    ],
    "paths": {
      "@/*": [
        "web/src/*"
      ],
      "@images/*": [
        "web/assets/images/*"
      ],
      "@scripts/*": [
        "web/assets/scripts/*"
      ],
      "@styles/*": [
        "web/assets/styles/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./web/**/*.ts",
    "./web/**/*.tsx",
    "./tests/**/*.ts",
    "./config/**/*.js",
    "./server/**/*.js",
    "./tests/**/*.js",
    "./*.js"
  ],
  "exclude": [
    "node_modules",
    ".git",
    ".vs"
  ]
}